<UserControl x:Class="CompUIWPF.Vehicles.Vehicles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompUIWPF.Vehicles"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu / toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Title / controls -->
            <RowDefinition Height="Auto"/>
            <!-- Header row -->
            <RowDefinition Height="*"/>
            <!-- Scrollable content -->
        </Grid.RowDefinitions>

        <!-- Menu (Filter / Sort / Reset) -->
        <Menu Grid.Row="0" Background="Transparent" Margin="4 -10 4 4">
            <MenuItem Header="Filter by">
                <MenuItem Header="Brand" Click="FilterByBrand_Click"/>
                <MenuItem Header="Category" Click="FilterByCategory_Click"/>
                <MenuItem Header="Clear filters" Click="ClearFilters_Click"/>
            </MenuItem>
            <MenuItem Header="Sort by">
                <MenuItem Header="Average position" Click="SortByAverage_Click"/>
                <MenuItem Header="Name" Click="SortByName_Click"/>
            </MenuItem>
            <MenuItem Header="Reset" Click="Reset_Click"/>
            <MenuItem Header="About" Click="AboutMenu_Click"/>
        </Menu>

        <!-- Title and toolbar -->
        <DockPanel Grid.Row="1" Margin="8">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" >
                <CheckBox x:Name="ShowPicturesCheck" Content="show pictures" VerticalAlignment="Center" Margin="0,0,16,0" Checked="ShowPicturesCheck_Changed" Unchecked="ShowPicturesCheck_Changed"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                <Button x:Name="AddButton" Content="Add new" Width="100" Margin="0,0,8,0" Click="AddButton_Click"/>
                <Button x:Name="UpdateButton" Content="Update" Width="100" Click="UpdateButton_Click"/>
            </StackPanel>
        </DockPanel>

        <!-- Header row -->
        <Border Grid.Row="2" Padding="6" Margin="8,0,8,6" CornerRadius="4"
 Background="Transparent">
            <Grid x:Name="HeaderGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <!-- Pos -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Picture -->
                    <ColumnDefinition Width="2*"/>
                    <!-- Brand -->
                    <ColumnDefinition Width="2*"/>
                    <!-- Model -->
                    <ColumnDefinition Width="2*"/>
                    <!-- Category -->
                    <ColumnDefinition Width="120"/>
                    <!-- Avg pos -->
                    <ColumnDefinition Width="180"/>
                    <!-- Actions (match rows) -->                </Grid.ColumnDefinitions>                <TextBlock Grid.Column="0" Text="Pos" HorizontalAlignment="Center" FontWeight="Bold" Foreground="White"/>                <TextBlock Grid.Column="2" Text="Brand" FontWeight="Bold" Foreground="White"/>                <TextBlock Grid.Column="3" Text="Model" FontWeight="Bold" Foreground="White"/>                <TextBlock Grid.Column="4" Text="Category" FontWeight="Bold" Foreground="White"/>                <TextBlock Grid.Column="5" Text="Avg pos" HorizontalAlignment="Center" FontWeight="Bold" Foreground="White"/>            </Grid>        </Border>        <!-- Scrollable list -->        <ScrollViewer Grid.Row="3" Margin="8" VerticalScrollBarVisibility="Auto">            <StackPanel x:Name="VehiclesPanel" Orientation="Vertical" />        </ScrollViewer>    </Grid></UserControl>
