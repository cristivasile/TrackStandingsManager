<Window x:Class="CompUIWPF.Vehicles.AddVehicleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Vehicle"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
		Style="{StaticResource MaterialDesignWindow}">
    <Border CornerRadius="8" Padding="0" Margin="16" 
            SnapsToDevicePixels="True">
        <DockPanel>
            <!-- Title bar -->
            <Border Padding="8" DockPanel.Dock="Top" CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="New Vehicle" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Margin="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Image -->
				<StackPanel Grid.Column="0"
							HorizontalAlignment="Left"
							MouseLeftButtonUp="ImageFrame_Click"
							Cursor="Hand">
					<Border x:Name="ImageFrame"
							Background="Gray"
							BorderThickness="3"
							CornerRadius="6"
							Width="206" Height="187"
							HorizontalAlignment="Left" VerticalAlignment="Top"
							MouseEnter="Image_MouseEnter" MouseLeave="Image_MouseLeave">
						<Grid>
							<Image x:Name="VehicleImagePreview" Stretch="Uniform" />
							<TextBlock x:Name="ImageInfoText"
									   Text="Click to paste&#x0a;image from clipboard"
									   HorizontalAlignment="Center" VerticalAlignment="Center"
									   TextAlignment="Center" FontSize="12"/>
						</Grid>
					</Border>
				</StackPanel>

                <!-- Right: Fields -->
                <StackPanel Grid.Column="2" VerticalAlignment="Top">
                    <TextBlock Text="Brand:" FontSize="14" Margin="0,4,0,2"/>
                    <TextBox x:Name="BrandTextBox" Height="30" />

                    <TextBlock Text="Model:" FontSize="14" Margin="0,12,0,2"/>
                    <TextBox x:Name="ModelTextBox" Height="30" />

                    <TextBlock Text="Category:" FontSize="14" Margin="0,12,0,2"/>
                    <DockPanel>
                        <ComboBox x:Name="CategoryComboBox" MinWidth="240" />
                        <Button Content="Remove" Margin="6,0,0,0" Click="RemoveCategoryButton_Click"/>
                    </DockPanel>

                    <!-- Message area -->
                    <StackPanel x:Name="MessagePanel" Margin="0,12,0,0"/>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                        <Button Content="Exit" Width="90" Margin="0,0,8,0" Click="CloseButton_Click"/>
                        <Button Content="Add" Width="90" Click="InsertButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </DockPanel>
    </Border>
</Window>