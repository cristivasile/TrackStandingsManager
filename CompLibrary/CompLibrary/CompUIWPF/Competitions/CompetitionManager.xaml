<UserControl x:Class="CompUIWPF.Competitions.CompetitionManager"
		 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		 xmlns:local="clr-namespace:CompUIWPF.Competitions"
		 mc:Ignorable="d"
		 d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu (Filter / Sort / Reset) -->
        <Menu Grid.Row="0" Background="Transparent" Margin="4 -10 4 4">
            <MenuItem Header="Filter by">
                <MenuItem Header="Brand" Click="FilterByBrand_Click"/>
                <MenuItem Header="Category" Click="FilterByCategory_Click"/>
                <MenuItem Header="Clear filters" Click="ClearFilters_Click"/>
            </MenuItem>
            <MenuItem Header="Reset" Click="Reset_Click"/>
            <MenuItem Header="Delete" Click="DeleteCompetition_Click"/>
        </Menu>

        <DockPanel Grid.Row="1" Margin="8 8 8 0">
            <!-- Left side -->
            <StackPanel Orientation="Vertical" DockPanel.Dock="Left" VerticalAlignment="Top" Margin="4 0 0 0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Competition " VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="CompetitionSelect" Width="360" SelectionChanged="CompetitionSelect_Changed" />
                </StackPanel>
                <TextBlock x:Name="DescriptionText" Width="680" TextWrapping="Wrap" Margin="0,4,0,0" />
            </StackPanel>

            <!-- Right side -->
            <Grid DockPanel.Dock="Right" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Image (if exists) -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Scoring info -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Buttons -->
                </Grid.ColumnDefinitions>

                <Image x:Name="CompetitionImage" 
                   Width="100" Height="80" MaxWidth="160" MaxHeight="120"
                   Stretch="Uniform" Margin="0,0,8,0"
                   VerticalAlignment="Top"
                   Visibility="Collapsed"/>
                <!-- will be shown in code if image exists -->

                <!-- Scoring info -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,12,0">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="0,0,12,0">
                        <TextBlock Text="Scoring type:" FontWeight="Bold" HorizontalAlignment="Right"/>
                        <TextBlock x:Name="ScoreTypeOutput" Text="&lt;null&gt;" HorizontalAlignment="Right"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="0,0,12,0">
                        <TextBlock Text="Sorted:" FontWeight="Bold" HorizontalAlignment="Right"/>
                        <TextBlock x:Name="SortedTypeOutput" Text="&lt;null&gt;" HorizontalAlignment="Right"/>
                    </StackPanel>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button x:Name="AddCompetitionButton" Content="Add Competition" Margin="0,0,8,0" Click="AddCompetitionButton_Click"/>
                    <Button x:Name="AddEntryButton" Content="New Entry" Click="AddEntryButton_Click"/>
                </StackPanel>
            </Grid>
        </DockPanel>

        <Border Grid.Row="2" Padding="6" Margin="8,0,8,6" CornerRadius="4" Background="Transparent">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Pos" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBlock Grid.Column="2" Text="Brand" FontWeight="Bold"/>
                <TextBlock Grid.Column="3" Text="Model" FontWeight="Bold"/>
                <TextBlock Grid.Column="4" Text="Category" FontWeight="Bold"/>
                <TextBlock Grid.Column="5" Text="Score" HorizontalAlignment="Center" FontWeight="Bold"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="3" Margin="8" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="CompetitorsPanel" Orientation="Vertical" />
        </ScrollViewer>
    </Grid>
</UserControl>