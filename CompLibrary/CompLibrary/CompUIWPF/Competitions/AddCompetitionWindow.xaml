<Window x:Class="CompUIWPF.Competitions.AddCompetitionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="New Competition"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Style="{StaticResource MaterialDesignWindow}">

	<Border CornerRadius="8" Padding="0" Margin="16">
		<DockPanel>

			<!-- Title Bar -->
			<Border Padding="8" DockPanel.Dock="Top" CornerRadius="8,8,0,0">
				<TextBlock Text="New Competition" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
			</Border>

			<!-- Content -->
			<Grid Margin="12">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="220"/>
					<ColumnDefinition Width="12"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<!-- LEFT: Image -->
				<StackPanel Grid.Column="0"
                            MouseLeftButtonUp="ImageFrame_Click"
                            Cursor="Hand">

					<Border x:Name="ImageFrame"
                            Background="Gray"
                            BorderThickness="3"
                            CornerRadius="6"
                            Width="206" Height="187"
                            MouseEnter="Image_MouseEnter"
                            MouseLeave="Image_MouseLeave">

						<Grid>
							<Image x:Name="CompetitionImagePreview" Stretch="Uniform" />
							<TextBlock x:Name="ImageInfoText"
                                       Text="Click to paste&#x0a;image from clipboard"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextAlignment="Center"
                                       FontSize="12"/>
						</Grid>

					</Border>
				</StackPanel>

				<!-- RIGHT: Fields -->
				<StackPanel Grid.Column="2" VerticalAlignment="Top">

					<!-- Name -->
					<TextBlock Text="Name:" Margin="0,0,0,2"/>
					<TextBox x:Name="NameBox" Height="30"/>

					<!-- Description -->
					<TextBlock Text="Description:" Margin="0,12,0,2"/>
					<TextBox x:Name="DescriptionBox"
                             Height="80"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"/>

					<!-- Score Type -->
					<TextBlock Text="Score type:" Margin="0,12,0,2"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="PointsButton"
                                     Content="Points"
                                     IsChecked="True"/>
                        <RadioButton x:Name="TimingsButton"
                                     Content="Timings"
                                     Margin="16,0,0,0"/>
                    </StackPanel>

                    <!-- Sort -->
					<TextBlock Text="Sort order:" Margin="0,12,0,2"/>
					<StackPanel Orientation="Horizontal">
						<RadioButton x:Name="AscendingButton"
                                     Content="Ascending"
                                     IsChecked="True"/>
						<RadioButton x:Name="DescendingButton"
                                     Content="Descending"
                                     Margin="16,0,0,0"/>
					</StackPanel>

					<!-- Messages -->
					<StackPanel x:Name="MessagePanel" Margin="0,12,0,0"/>

					<!-- Buttons -->
					<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
						<Button Content="Exit" Width="90" Margin="0,0,8,0" Click="Exit_Click"/>
						<Button Content="Add" Width="90" Click="Create_Click"/>
					</StackPanel>

				</StackPanel>

			</Grid>

		</DockPanel>
	</Border>
</Window>
