<Window x:Class="CompUIWPF.Competitions.VehicleSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Select Vehicle" Height="1080" Width="1920"
        Style="{StaticResource MaterialDesignWindow}">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="SearchBox" Height="32" Margin="0 0 0 8"
                 materialDesign:HintAssist.Hint="Search..."/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ListBox x:Name="VehicleGrid"
                     BorderThickness="0">

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="Gray"
                                CornerRadius="6" Padding="6" Margin="6"
                                Cursor="Hand"
                                Tag="{Binding Id}"
                                MouseDown="VehicleGrid_MouseDown">
                            <StackPanel Width="150">
                                <Image Source="{Binding ImagePath}" Height="80" Stretch="Uniform"/>
                                <TextBlock Text="{Binding Brand}" FontWeight="Bold"
                                           HorizontalAlignment="Center" Margin="0 2 0 0"/>
                                <TextBlock Text="{Binding Model}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding ScoreText}" 
                                           HorizontalAlignment="Center" 
                                           Foreground="Gray" FontStyle="Italic"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
        </ScrollViewer>
    </Grid>
</Window>