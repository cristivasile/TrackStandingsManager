<Window x:Class="CompUIWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompUIWPF"
        Title="Track Standings Manager"
        mc:Ignorable="d"
        Height="800" Width="1600"
        Style="{StaticResource MaterialDesignWindow}">
    <Window.Resources>
        <local:TabIndexToViewConverter x:Key="TabIndexToViewConverter"/>
    </Window.Resources>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Tab selector -->
                <RowDefinition Height="*"/>    <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Tab selector (headers only) -->
            <TabControl x:Name="TopTabControl"
                        Grid.Row="0"
                        TabStripPlacement="Top"
                        Margin="8"
                        Background="Transparent"
                        Style="{DynamicResource MaterialDesignTabControl}">
                <TabItem Header="Vehicles" Style="{DynamicResource MaterialDesignTabItem}" />
                <TabItem Header="Competitions" Style="{DynamicResource MaterialDesignTabItem}" />
            </TabControl>

            <!-- Content area: shows the singleton view corresponding to selected tab -->
            <ContentPresenter Grid.Row="1"
                              Margin="12"
                              Content="{Binding ElementName=TopTabControl, Path=SelectedIndex, Converter={StaticResource TabIndexToViewConverter}}"
                              x:Name="MainContentPresenter"/>
        </Grid>
</Window>
